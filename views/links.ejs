<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Useful Links</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      crossorigin="anonymous"
    />
    <%- include("./partials/head") %>
  </head>
  <body>
    <%- include("./partials/navBar") %>

    <div class="container my-5">
      <h1 class="display-4 fw-bold text-center text-primary">
        Useful Links
      </h1>
      <p class="text-muted text-center mt-3 mb-4" style="font-size: 1.75rem">
        Explore research journals and scientific databases.
      </p>

      <!-- ISI Web of Knowledge Section -->
      <div class="fw-semibold fs-4 mb-3">
        <i class="fas fa-book-open me-2 text-primary"></i> ISI Web of Knowledge
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
              <a href="https://pubs.acs.org/" target="_blank" class="text-decoration-none fs-5">
                <i class="fas fa-external-link-alt me-2 text-primary"></i>
                Web of Science
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Journals Section -->
      <div class="fw-semibold fs-4 mt-4 mb-3">
        <i class="fas fa-journal-whills me-2 text-primary"></i> Journals
      </div>
      <div class="row">
        <% if (locals.journals) { %>
          <% journals.forEach(journal => { %>
            <div class="col-md-6">
              <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                  <a href="<%= journal.journal_link %>" target="_blank" class="text-decoration-none fs-5">
                    <i class="fas fa-external-link-alt me-2 text-primary"></i>
                    <%= journal.journal_name %>
                  </a>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>

    <%- include("./partials/footer") %>
    <%- include("./partials/script") %>
  </body>
</html>